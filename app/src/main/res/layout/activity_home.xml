<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="Find Your"
            android:textColor="#000000"
            android:textSize="17dp"
            android:textStyle="bold"></TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:fontFamily="sans-serif"
            android:text="Next Destination"
            android:textColor="#000"
            android:textSize="25dp"
            android:textStyle="bold"></TextView>

        <SearchView
            android:id="@+id/searchview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="105dp"
            android:layout_marginRight="20dp"
            android:background="#F1F4F4"
            android:iconifiedByDefault="false"
            android:queryHint="Search here" />
        <ImageView
            android:id="@+id/menu"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/ic_map" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="177dp"
        android:layout_marginBottom="450dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/travel"
            android:layout_width="73dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"
            app:srcCompat="@drawable/placesjb" />

        <ImageView
            android:id="@+id/hotels"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            app:srcCompat="@drawable/hotelj"/>

        <ImageView
            android:id="@+id/hospital"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            app:srcCompat="@drawable/hospitalj" />

        <ImageView
            android:id="@+id/cafe"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            app:srcCompat="@drawable/cafej" />
        <ImageView
            android:id="@+id/adventure"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            app:srcCompat="@drawable/adventurej" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="280dp"
        android:layout_marginBottom="415dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Places"
            android:textColor="#000"
            android:textSize="16dp"
            android:layout_marginLeft="13dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hotels"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_marginLeft="25dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hospitals"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_marginLeft="25dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cafe"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_marginLeft="25dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adventure"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_marginLeft="25dp"></TextView>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="317dp"
        android:text="For You"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"></TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="350dp">

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>